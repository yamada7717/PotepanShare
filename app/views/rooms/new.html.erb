
<%= render "shared/header" %>
<div class="container">
  <h2 class="room_title">施設の新規登録</h2>
    <% if flash[:alert] %>
      <div class="flash-message notice">
        <%= flash[:alert] %>
      </div>
    <% end %>
  <div class="room_aria">
    <%= form_with model: @room, class: "form" do |f| %>
      <div class="form-group">
        <%= f.label :room_name, "施設名" %>
        <%= f.text_field :room_name, placeholder: "施設名", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address, "施設住所" %>
        <%= f.text_field :address, placeholder: "施設住所", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :room_detail, "施設の詳細" %>
        <%= f.text_area :room_detail, placeholder: "施設の詳細", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :price, "一泊の料金" %>
        <%= f.number_field :price, placeholder: "一泊の料金", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :room_image, class: "custom-file-upload" do %>
          <span>施設の写真を登録</span>
          <%= f.file_field :room_image, class: "hidden" %>
        <% end %>
      </div>
      <%= link_to "キャンセル", :back, class: "btn" %>
      <%= f.submit "登録", class: "btn" %>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
