<%= render "shared/header"%>
<div class="container">
  <h2 class="profile_title">設定</h2>
  <%= link_to '編集', edit_profile_users_path, class: 'profile_edit' %>
    <div class="side_link d-flex">
      <ul class="side_aria">
        <li><%= link_to 'アカウント', user_path(current_user), class:'profile_link' %></li>
        <li></li><%= link_to 'プロフィール', profile_users_path, class:'profile_link' %>
      </ul>
      <div class="profile_aria">
        <h3 class="account_title">プロフィール</h3>
        <div class="d-flex">
          <div class="profile_label">アイコン</div>
          <%= image_tag(current_user.user_image.attached? ? url_for(current_user.user_image) : 'default-avatar.png', class: 'user_image') %>
        </div>
        <div class="d-flex">
          <div class="profile_label">名前</div>
          <p class="profile_name"><%= current_user.user_name %></p>
        </div>
        <div class="d-flex">
          <div class="profile_label">自己紹介</div>
          <p class="profile_bio"><%= current_user.bio %></p>
        </div>
      </div>
    </div>
</div>
