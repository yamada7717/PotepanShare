<%= render "shared/header"%>
<div class="top_view">
  <section class="container">
    <div class="top_title">
      <h2>Potepan&nbsp; Shareで<br>まだ体験したことのない<br>旅をしよう</h2>
    </div>
    <div class="search_form_aria">
      <div class="search_form">
        <%= form_tag(search_path, method: "get") do %>
        <div class="search_box">
          <%= text_field_tag :query, "", placeholder: "エリアを入力", class: 'form-control' %><br>
          <%= submit_tag "検索", class: 'form-control' %>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

<div class="container">
  <section class="container">
    <h2 class="aria_top_title">おすすめのエリア</h2>
      <div class="area_links d-flex">
        <%= link_to search_path(query: '東京都'), class: 'area_link' do %>
          <div class="tokyo">
            <h3 class="aria_title">東京</h3>
          </div>
        <% end %>
      <%= link_to search_path(query: '大阪府'), class: 'area_link' do %>
        <div class="osaka">
          <h3 class="aria_title">大阪</h3>
        </div>
      <% end %>
      <%= link_to search_path(query: '京都府'), class: 'area_link' do %>
        <div class="kyoto">
          <h3 class="aria_title">京都</h3>
        </div>
      <% end %>
      <%= link_to search_path(query: '札幌'), class: 'area_link' do %>
        <div class="sapporo">
          <h3 class="aria_title">札幌</h3>
        </div>
        <% end %>
      </div>
  </section>
</div>
<%= render "shared/footer"%>
