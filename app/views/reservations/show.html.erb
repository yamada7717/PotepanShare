<%= render "shared/header"%>
<%= render "shared/search"%>

<div class="container">
  <ul class="row">
    <% @rooms.each do |room| %>
      <li class="col-sm">
        <% if room.room_image.attached? %>
            <%= image_tag room.room_image, class: 'room_image' %>
          <% else %>
            <%= image_tag 'default-room-image.png', class: 'room_image' %>
        <% end %>
        <div class="room_wrapper">
            <p><%= room.room_name %></p>
            <p><%= room.address %></p>
            <p><%= room.room_detail %></p>
          <div class="room_footer">
            <p>¥<%= number_with_delimiter(room.price) %>〜</p>
            <%= link_to "詳細ページ", new_room_reservation_path(room), class: "reservation-link" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<%= render "shared/footer"%>
